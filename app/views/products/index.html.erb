<h3>Products</h3>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <div id="product_preview_<%= product.id %>">
        <%= render 'preview', :product=>product %>
      </div>
      <div id="product_detail_<%= product.id %>" class="start-hidden">
        <%= render 'detail', :product=>product %>
      </div>
    </div>
  <% end %>
  </div>
</div>
