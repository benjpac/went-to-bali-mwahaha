<h1>Add a product</h1>

<%= form_for @product do |f| %>
  Name: <%= f.text_field :name %>
  Description: <%= f.text_field :description %>
  Price: <%= f.number_field :price, step: 0.01 %>
  Image URL: <%= f.text_field :image %>
  <span class="waves-effect waves-light btn"><%= f.submit "Submit" %></span>
<% end %>
